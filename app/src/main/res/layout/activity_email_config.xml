<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground_color"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        app:menu="@menu/email_config_top_bar_menu"
        app:navigationIcon="@drawable/ic_title_left"
        app:title="邮箱配置"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/bg_solid_layout_white_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemLayoutHeight"
            android:background="@drawable/bg_solid_layout_white_16"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="发件箱"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/sp_16" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:boxBackgroundMode="none"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailSendAddressView"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="end|center_vertical"
                    android:hint="如：123456789"
                    android:inputType="number"
                    android:maxLength="15"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_16" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="\@qq.com"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:background="#CCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemLayoutHeight"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="授权码"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/sp_16" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:boxBackgroundMode="none"
                app:boxStrokeWidthFocused="0dp"
                app:endIconMode="password_toggle"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailSendCodeView"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="end|center_vertical"
                    android:inputType="textPassword"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_16" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:background="#CCC" />

        <LinearLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemLayoutHeight"
            android:background="@drawable/bg_solid_layout_white_16"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="收件箱"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/sp_16" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:boxBackgroundMode="none"
                app:boxStrokeWidthFocused="0dp"
                app:endIconMode="clear_text"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailInboxView"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="end|center_vertical"
                    android:hint="如：xxxxx@qq.com"
                    android:inputType="textEmailAddress"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_16" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emailTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLayoutHeight"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:background="@drawable/bg_solid_layout_white_16"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="邮件标题"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/sp_16" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:boxBackgroundMode="none"
            app:boxStrokeWidthFocused="0dp"
            app:endIconMode="clear_text"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailTitleView"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="end|center_vertical"
                android:hint="如：打卡结果通知"
                android:padding="0dp"
                android:singleLine="true"
                android:textSize="@dimen/sp_16" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</LinearLayout>