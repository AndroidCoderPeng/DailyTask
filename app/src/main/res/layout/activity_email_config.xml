<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground_color"
    android:orientation="vertical">

    <com.pengxh.kt.lite.widget.TitleBarView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tbv_left_image="@drawable/ic_title_left_black"
        app:tbv_right_image="@drawable/ic_title_right_black"
        app:tbv_show_right_image="true"
        app:tbv_smaller_title="true"
        app:tbv_text="邮箱配置"
        app:tbv_text_color="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/bg_solid_layout_white_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemLayoutHeight"
            android:background="@drawable/bg_solid_layout_white_16"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="发件箱"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/sp_16" />

            <com.pengxh.kt.lite.widget.DeleteEditText
                android:id="@+id/emailSendAddressView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="如：xxxxx@qq.com"
                android:inputType="textEmailAddress"
                android:paddingVertical="@dimen/dp_8"
                android:singleLine="true"
                android:textColorHint="@color/lib_hint_color"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:background="#CCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemLayoutHeight"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="授权码"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/sp_16" />

            <com.pengxh.kt.lite.widget.DeleteEditText
                android:id="@+id/emailSendCodeView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="如：wkepaekhmlalbgji"
                android:paddingVertical="@dimen/dp_8"
                android:singleLine="true"
                android:textColorHint="@color/lib_hint_color"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:background="#CCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemLayoutHeight"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="服务器"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/sp_16" />

            <com.pengxh.kt.lite.widget.DeleteEditText
                android:id="@+id/emailSendServerView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="如：smtp.qq.com"
                android:paddingVertical="@dimen/dp_8"
                android:singleLine="true"
                android:textColorHint="@color/lib_hint_color"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:background="#CCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemLayoutHeight"
            android:background="@drawable/bg_solid_layout_white_16"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="端口号"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/sp_16" />

            <com.pengxh.kt.lite.widget.DeleteEditText
                android:id="@+id/emailSendPortView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="如：587"
                android:inputType="number"
                android:maxLength="5"
                android:paddingVertical="@dimen/dp_8"
                android:singleLine="true"
                android:textColorHint="@color/lib_hint_color"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLayoutHeight"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:background="@drawable/bg_solid_layout_white_16"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="收件箱"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/sp_16" />

        <com.pengxh.kt.lite.widget.DeleteEditText
            android:id="@+id/emailInboxView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="如：xxxxx@qq.com"
            android:paddingVertical="@dimen/dp_8"
            android:singleLine="true"
            android:textColorHint="@color/lib_hint_color"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emailTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLayoutHeight"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/bg_solid_layout_white_16"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="邮件标题"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/sp_16" />

        <com.pengxh.kt.lite.widget.DeleteEditText
            android:id="@+id/emailTitleView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="如：打卡结果通知"
            android:paddingVertical="@dimen/dp_8"
            android:singleLine="true"
            android:textColorHint="@color/lib_hint_color"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>